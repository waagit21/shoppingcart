<!-- BEGIN PAGE -->
  <div class="page-content"> 
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid"> 
      <!-- BEGIN PAGE HEADER-->
      <div class="row-fluid">
        <div class="span12">
          <h3 class="page-title"> Dashboard <small>View Items</small> </h3>
          <ul class="breadcrumb">
            <li> <i class="icon-home"></i> <a href="/dashboard">Dashboard</a> <span class="icon-angle-right"></span> </li>
          </ul>
        </div>
      </div>
      <!-- END PAGE HEADER--> 
      <!-- BEGIN PAGE CONTENT-->
      <div class="row-fluid">
        {{#ifCond user.type '<' 4}}
        <div class="span3 responsive pointer" data-tablet="span6" data-desktop="span3" onclick="location.href='/admusers'">
          <div class="dashboard-stat blue">
            <div class="visual"> <i class="icon-comments"></i> </div>
            <div class="details">
              <div class="number">{{counts.user_count}}</div>
              <div class="desc"> Admin Users </div>
            </div>
            <a class="more" href="/admusers"> View <i class="m-icon-swapright m-icon-white"></i> </a> </div>
        </div>
        <div class="span3 responsive pointer" data-tablet="span6" data-desktop="span3" onclick="location.href='/webusers'">
          <div class="dashboard-stat green">
            <div class="visual"> <i class="icon-comments"></i> </div>
            <div class="details">
              <div class="number">{{counts.web_count}}</div>
              <div class="desc">Web Users</div>
            </div>
            <a class="more" href="/webusers"> View <i class="m-icon-swapright m-icon-white"></i> </a> </div>
        </div>
        {{/ifCond}}
        <div class="span3 responsive pointer" data-tablet="span6  fix-offset" data-desktop="span3" onclick="location.href='/products'">
          <div class="dashboard-stat purple">
            <div class="visual"> <i class="icon-globe"></i> </div>
            <div class="details">
              <div class="number">{{counts.products_count}}</div>
              <div class="desc">Products</div>
            </div>
            <a class="more" href="/products"> View <i class="m-icon-swapright m-icon-white"></i> </a> </div>
        </div>
        <div class="span3 responsive pointer" data-tablet="span6  fix-offset" data-desktop="span3" onclick="location.href='/orders'">
          <div class="dashboard-stat yellow">
            <div class="visual"> <i class="icon-globe"></i> </div>
            <div class="details">
              <div class="number">{{counts.orders_count}}</div>
              <div class="desc">Orders</div>
            </div>
            <a class="more" href="/orders"> View <i class="m-icon-swapright m-icon-white"></i> </a> </div>
        </div>
      </div>
      <!-- END PAGE CONTENT--> 
    </div>
    <!-- END PAGE CONTAINER--> 
  </div>
  <!-- END PAGE --> 