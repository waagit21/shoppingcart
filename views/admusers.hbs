<div class="page-content"> 
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid"> 
      <!-- BEGIN PAGE HEADER-->
      <div class="row-fluid">
        <div class="span12">
          <h3 class="page-title"> Admin Users <small>View/Add/Edit/Delete</small> </h3>
          <ul class="breadcrumb">
            <li> <i class="icon-user"></i> <a href="">View Users</a> </li>
          </ul>
        </div>
      </div>
      <!-- END PAGE HEADER--> 
      <!-- BEGIN PAGE CONTENT-->
      <div class="row-fluid">
        {{#if error}}
            <div class="alert alert-error"><button class="close" data-dismiss="alert"></button>{{error}}</div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success"><button class="close" data-dismiss="alert"></button>{{success}}</div>
        {{/if}}
        <div class="alert alert-error hide">
          <button class="close" data-dismiss="alert"></button>
          <span id="err_msg"></span> </div>
        <div class="alert alert-success hide">
          <button class="close" data-dismiss="alert"></button>
          <span id="suc_msg"></span> </div>
      </div>
      <div class="row-fluid">
        <div class="span12"> 
          <!-- BEGIN EXAMPLE TABLE PORTLET-->
          <div class="portlet box blue">
            <div class="portlet-title">
              <h4><i class="icon-reorder"></i>Admin Users</h4>
              <div class="tools"> <a href="javascript:;" class="collapse"></a> </div>
            </div>
            <div class="portlet-body">
              <div class="clearfix">
                <div class="btn-group">  </div>
                <div class="btn-group pull-right">
                  <span class="mr10"><a href="admusersedit" class="btn green" title="Add"><i class="icon-plus"></i> Add New</a></span>
                  <button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i> </button>
                  <ul class="dropdown-menu">
                    <li><a href="#">Print</a></li>
                    <li><a href="#">Save as PDF</a></li>
                    <li><a href="#">Export to Excel</a></li>
                  </ul>
                </div>
              </div>
              <table class="table table-striped table-hover table-bordered" id="admusers">
                <thead>
                  <tr>
                    <th class="none">Id</th>
                    <th>Type</th>
                    <th>Username</th>
                    <th class="hidden-320">Full Name</th>
                    <th class="hidden-480">Email</th>
                    <th class="hidden-480">Phone No</th>
                    <th class="hidden-480">Date Time</th>
                    <th>Status</th>
                    <th width="200px">Action</th>
                  </tr>
                </thead>
                <tbody>
                {{#each items as |item|}}  
                  <tr class="" data-uid="{{item.admid}}">
                    <td class="none">{{@index}}</td>
                    <td><span style="color:{{item.roles.[0].color}}">{{item.roles.[0].name}} </span></td>
                    <td>{{item.username}}</td>
                    <td class="hidden-320">{{item.name}}</td>
                    <td class="hidden-480"><a href="mailto:{{item.email}}">{{item.email}}</a></td>
                    <td class="hidden-480">{{item.phone}}</td>
                    <td class="hidden-480">{{item.created}}</td>
                    <td>{{#ifCond item.status '==' 0}}<a href="" class="suspend" data-toggle="tooltip" title="Approved"><span class="label label-success"><i class="fa fa-check"></i></span></a>{{else}}<a href="" class="resume" data-toggle="tooltip" title="Suspended"><span class="label label-warning"><i class="fa fa-pause" aria-hidden="true"></i></span></a>{{/ifCond }}</td>
                    <td><a href="admusersview?id={{item.admid}}" class="btn mini blue" title="View"><i class="icon-share"></i></a> &nbsp; <a href="admusersedit?id={{item.admid}}" class="btn mini purple" title="Edit"><i class="icon-edit"></i></a> &nbsp; <a href="" class="btn mini black delete" title="Delete"><i class="icon-trash"></i></a> &nbsp; <a href="products?usr={{item.admid}}" class="btn mini red-stripe" title="View Products"><i class="fa fa-product-hunt" aria-hidden="true"></i></a></td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
          </div>
          <!-- END EXAMPLE TABLE PORTLET--> 
        </div>
      </div>
      <!-- END PAGE CONTENT--> 
    </div>
    <!-- END PAGE CONTAINER--> 
  </div>